# Nixpacks configuration for IntentManagementAPI
# This file configures how Railway builds and runs your .NET application

# Use .NET 8.0 SDK
providers:
  - nixpacks

# Build phases
phases:
  setup:
    nixPkgs:
      - dotnet-sdk_8
  install:
    cmds:
      - dotnet restore IntentManagementAPI.csproj
  build:
    cmds:
      - dotnet build IntentManagementAPI.csproj -c Release -o /app/build

# Start command
start:
  cmd: dotnet /app/build/IntentManagementAPI.dll 